### Variables
set $mod Mod4
set $term alacritty
set $lock ~/.dotfiles/scripts/lock.sh
set $wall ~/dotfiles/wallpapers/wall.jpg

### Appearance
font pango:JetBrainsMono Nerd Font 10
exec_always --no-startup-id feh --bg-scale $wall
exec --no-startup-id picom --config ~/.config/picom/picom.conf
exec --no-startup-id dunst

### Autostart
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
exec --no-startup-id udiskie -t

### Lock on suspend
exec --no-startup-id xss-lock -- $lock

### Gaps (optional)
gaps inner 5
gaps outer 5

### Keybindings
bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec rofi -show drun
bindsym $mod+Shift+x exec --no-startup-id $lock

# Workspaces
set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3: "
set $ws4 "4: "
set $ws5 "5: "

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5

# Move focused container
bindsym $mod+Shift+1 move container to workspace $ws1
# ... repeat for 2-5

### Window Rules
for_window [class="Alacritty"] border pixel 2
for_window [class="Tty-clock"] floating enable

### Bar
bar {
  status_command i3status-rs ~/.config/i3status-rust/config.toml
  font pango:JetBrainsMono Nerd Font 10
  position top
}
